<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.cs5520_a7">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moment">
        <activity
            android:name=".postService.CheckLikedPosts"
            android:exported="true" />
        <activity
            android:name=".postService.CheckSelfPosts"
            android:exported="true" />
        <activity
            android:name=".user.CheckSelfInfo"
            android:exported="true" />
        <activity
            android:name=".postService.CheckAllPosts"
            android:exported="true" />
        <activity
            android:name=".postService.CreateNewPost"
            android:exported="true" />
        <activity
            android:name=".stickerService.ReceiveHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".user.UserActivity"
            android:exported="true" />
        <activity
            android:name=".stickerService.SendHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".stickerService.SendStickerActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".fcm.StickerFirebaseMessagingService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>